:root {
  @custom-media --mobile all and (max-width: 980px);
  @custom-media --desktop all and (min-width: 981px);
}

body {
  margin: 0;
  background-color: #141414;
  color: #fff;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
}

h1, h2 {
  margin: 0;
}

a {
  color: #FFF;
  text-decoration: none;

  &:hover {
    cursor: pointer;
  }
}

.screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 500px;
  width: 100%;
  height: 100%;
}

.face {
  margin-top: auto;

  @media (--desktop) {
    transform: translateY(60%);
  }

  &__title {
    text-align: center;
    letter-spacing: 5.69px;
    font-weight: bold;
    font-size: 47px;

    @media (--mobile) {
      font-size: 37px;
    }
  }

  &__subtitle {
    margin-top: 15px;
    color: rgba(255, 255, 255, 0.35);
    text-align: center;
    letter-spacing: 2.06px;
    font-weight: 500;
    font-size: 20px;

    @media (--mobile) {
      font-size: 15.74px;
    }
  }
}


.button {
  display: inline-flex;
  align-items: center;
  margin: 10px;
  padding: 0.75em 1.10em;
  border: 1px rgba(255, 255, 255, 0.2) solid;
  border-radius: 22.5px;
  letter-spacing: 1.64px;
  line-height: 1em;
  cursor: pointer;
  user-select: none;

  &::before {
    background-size: contain;
    background-repeat: no-repeat;
    content: '';
  }

  &:hover {
    border: 1px rgba(255, 255, 255, 1) solid;
  }

  &--vk {
    &::before {
      margin-right: 11px;
      margin-bottom: -2px;
      width: 25.26px;
      height: 15px;
      background-image: svg-load(./svg/vk-logo.svg);
    }
  }
}

.basement {
  margin-top: auto;
  margin-bottom: 50px;
}
